{
  "name": "ai-email-sender",
  "version": "1.0.0",
  "description": "Full-stack MERN app to generate AI-written emails and send them to recipients.",
  "main": "server/index.js",
  "scripts": {
    "start": "npm install --prefix server && node server/index.js",
    "server": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "mern",
    "email",
    "openai",
    "nodemailer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "groq-sdk": "^0.30.0",
    "mongoose": "^8.3.5",
    "nodemailer": "^6.9.9",
    "openai": "^4.30.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}
